{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2019"],
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false
  },
  "files": ["src/public_api.ts"],
  "typedocOptions": {
    "out": "docs/docs",
    "mode": "file",
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "exclude": "source/test",
    "ignoreCompilerErrors": true,
    "excludePrivate": true,
    "excludeNotExported": true,
    "stripInternal": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "theme": "minimal",
    "hideGenerator": true,
    "readme": "none"
  }
}
